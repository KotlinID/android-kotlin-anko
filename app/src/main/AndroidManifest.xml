<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="id.kotlin.sample.anko">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity android:name="id.kotlin.sample.anko.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="id.kotlin.sample.anko.basic.FirstActivity"
            android:label="@string/label_first" />
        <activity
            android:name="id.kotlin.sample.anko.basic.FirstExtraActivity"
            android:label="@string/label_first_extra"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="id.kotlin.sample.anko.basic.SecondActivity"
            android:label="@string/label_second" />
        <activity
            android:name="id.kotlin.sample.anko.basic.SecondExtraActivity"
            android:label="@string/label_second_extra" />
        <activity
            android:name="id.kotlin.sample.anko.basic.callers.CallersActivity"
            android:label="@string/label_callers" />
        <activity
            android:name="id.kotlin.sample.anko.basic.callers.type.PhoneCallActivity"
            android:label="@string/type_call"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="id.kotlin.sample.anko.basic.callers.type.SendMessageActivity"
            android:label="@string/type_sms"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="id.kotlin.sample.anko.basic.callers.type.OpenBrowserActivity"
            android:label="@string/type_browse"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="id.kotlin.sample.anko.basic.callers.type.ShareActivity"
            android:label="@string/type_share"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="id.kotlin.sample.anko.basic.callers.type.SendEmailActivity"
            android:label="@string/type_email"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="id.kotlin.sample.anko.basic.actions.ActionsActivity"
            android:label="@string/label_actions" />
        <activity
            android:name="id.kotlin.sample.anko.db.DBInputActivity"
            android:label="@string/label_db"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="id.kotlin.sample.anko.coroutine.CoroutineActivity"
            android:label="@string/label_coroutine" />
        <activity
            android:name="id.kotlin.sample.anko.db.DBResultActivity"
            android:label="@string/label_db_result" />
    </application>
</manifest>